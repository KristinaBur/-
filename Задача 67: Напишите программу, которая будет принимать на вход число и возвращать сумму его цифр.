// –í–æ–∑–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ –ê –≤ —Å—Ç–µ–ø–µ–Ω—å –ë —Å –ø–æ–º–æ—â—å—é —Ä–µ–∫—É—Ä—Å–∏–∏ 
 
Console.WriteLine("–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ A"); 
int A = int.Parse(Console.ReadLine()!); 
 
Console.WriteLine("–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ B"); 
int B = int.Parse(Console.ReadLine()!); 
 
Console.WriteLine(PoweredBy(A,B)); 
 
// --------------method------------------- 
 
int PoweredBy(int A, int üòé 
{ 
    if(B == 0) return 1; 
    if(B == 1) return A; 
    return (A * PoweredBy(A, B - 1)); 
}

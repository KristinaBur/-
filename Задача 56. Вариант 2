int  SumLineElements ( int [,] array , int  i )
{
  int  sumLine  =  массив [ i , 0 ];
  for ( int  j  =  1 ; j  <  array . GetLength ( 1 ); j ​​++ )
  {
    sumLine  +=  массив [ i , j ];
  }
  вернуть  суммуСтрока ;
}

